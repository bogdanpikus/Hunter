#include <irostrem>

int main()
{
int E[21]={-12,14};
int n=21;
int i,a,b, min;
a= -12; b= 14;
E[21]=a+rand()%(b-a+1);
for(i=0;i<n;i++)
{
E[i]= rand()%26 -12 ;
}
printf("\n\ massiv\n\n");
for (i=0;i<n;i++)
{
printf("%d ", E[i]);
printf("\n");
}
min=E[0];
for (i=0; i<n; i++)
{
if((i%3)&&E[i]<min)
min =E[i];
}
printf(" = %d\n", min);
return 0;
}

